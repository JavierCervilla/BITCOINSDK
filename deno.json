{
  "name": "@universelle/bitcoinsdk",
  "description": "A Deno SDK for bitcoin and other bitcoin protocols as Counterparty",
  "version": "0.2.24",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts",
    "./core": "./src/core/index.ts",
    "./ui": "./src/ui/index.ts"
  },
  "tasks": {
    "dev": "deno run -A npm:vite --mode dev",
    "ladle": "deno run -A npm:@ladle/react dev",
    "build": "deno run -A src/build.ts",
    "core-docs": "deno doc src/core/index.ts > docs/core.md",
    "ui-docs": "deno doc  --output=docs/ui src/ui/index.ts",
    "npm": "deno task build && cd npm && npm publish --access public",
    "jsr": "deno publish --no-check --allow-slow-types",
    "publish": "deno task jsr && deno task npm",
    "lint": "deno lint"
  },
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["react", "react-dom"]

  },
  "nodeModulesDir":"auto",
  "imports": {
    "@/": "./src/",
    "@styles/": "./src/ui/styles/",
    "@leather-wallet/types": "npm:@leather-wallet/types@^0.2.1",
    "@leather.io/rpc": "npm:@leather.io/rpc@^2.5.13",
    "@radix-ui/react-dropdown-menu": "npm:@radix-ui/react-dropdown-menu@^2.1.6",
    "@radix-ui/react-select": "npm:@radix-ui/react-select@^2.1.6",
    "@radix-ui/react-slot": "npm:@radix-ui/react-slot@^1.1.1",
    "@radix-ui/react-tabs": "npm:@radix-ui/react-tabs@^1.1.3",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.0.4",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.0.0",
    "@types/react": "npm:@types/react@^19.0.10",
    "@types/react-dom": "npm:@types/react-dom@^19.0.4",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.4",
    "autoprefixer": "npm:autoprefixer@^10.4.20",
    "bitcoinjs-lib": "npm:bitcoinjs-lib@^7.0.0-rc.0",
    "class-variance-authority": "npm:class-variance-authority@^0.7.1",
    "clsx": "npm:clsx@^2.1.1",
    "lucide-react": "npm:lucide-react@^0.474.0",
    "@ladle": "npm:@ladle/react@5.0.1",
    "react": "npm:react@^19.0.0",
    "react-dom": "npm:react-dom@^19.0.0",
    "react-hot-toast": "npm:react-hot-toast@^2.5.1",
    "react-router-dom": "npm:react-router-dom@^7.1.3",
    "react-window": "npm:react-window@^1.8.11",
    "tailwind-merge": "npm:tailwind-merge@^2.6.0",
    "tailwindcss": "npm:tailwindcss@^4.0.0",
    "tailwindcss-animate": "npm:tailwindcss-animate@^1.0.7",
    "vite": "npm:vite@^6.0.11",
    "vite-plugin-dts": "npm:vite-plugin-dts@^4.5.0"
  }
}
